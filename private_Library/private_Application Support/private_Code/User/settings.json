{
  "files.autoSave": "afterDelay",
  "window.autoDetectColorScheme": true,
  "editor.rulers": [80],
  "editor.minimap.enabled": true,
  "editor.fontSize": 12,
  // "editor.fontFamily": "SF Mono, Monaco, monospace",
  "editor.fontFamily": "Monaco, 'Courier New', monospace",
  "editor.fontWeight": "600",
  "editor.fontLigatures": false,
  "editor.wordWrap": "bounded",
  "editor.formatOnSave": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "workbench.iconTheme": "vscode-icons",
  "plantuml.render": "PlantUMLServer",
  "plantuml.server": "http://localhost:8000",
  "plantuml.previewAutoUpdate": true,
  "[python]": {
    "editor.formatOnType": true
  },
  "vim.useCtrlKeys": true,
  "vim.showMarksInGutter": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": "[<C-r>]", "commands": ["redo"] }
  ],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.fontFamily": "SF Mono, Monaco, monospace",
  "terminal.integrated.fontWeight": "normal",
  "workbench.colorCustomizations": {
    "terminal.background": "#1d1d1d",
    "terminal.foreground": "#ffffff"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "terminal.integrated.macOptionIsMeta": true,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.associations": {
    "*.yml": "ytt"
  },
  "[ytt]": {
    "editor.tabSize": 2,
    "editor.useTabStops": false
  },
  "git.openRepositoryInParentFolders": "never",
  "yaml.schemas": {
    "schema/excel-spec.json": ["*.yaml"]
  },
  "workbench.colorTheme": "Default Light Modern",
  "dart.flutterSdkPath": "/usr/local/flutter"
}
